{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"version": 2,
	"console_title_template": "{{ if .WSL }} WSL",
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"background": "006",
					"foreground": "001",
					"style": "diamond",
					"template": " {{ .Icon }} ",
					"type": "os"
				},
				{
					"background": "006",
					"foreground": "001",
					"style": "diamond",
					"template": "{{ .UserName }} ",
					"type": "session"
				},
				{
					"background": "232",
					"foreground": "001",
					"powerline_symbol": "\ue0b0 ",
					"style": "powerline",
					"properties": {
						"style": "powerlevel",
						"home_icon": "\uf015 ~"
					},
					"template": "{{ .Path }} ",
					"type": "path"
				}
			]
		},
		{
			"type": "rprompt",
			"alignment": "right",
			"segments": [
				{
					"type": "exit",
					"foreground": "001",
					"background": "232",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"template": "{{ if gt .Code 0 }} \uf00d {{ else }} \uf42e {{ end }}",
					"properties": {
						"always_enabled": true
					}
				},
				{
					"type": "time",
					"background": "232",
					"foreground": "001",
					"leading_diamond": "<006>\ue0b3",
					"trailing_diamond": "<006>\ue0b2",
					"style": "diamond",
					"properties": {
						"time_format": "03:04"
					},
					"template": " {{ .CurrentDate | date .Format }} \uf017 "
				},
				{
					"type": "sysinfo",
					"foreground": "001",
					"background": "006",
					"template": " {{ round .PhysicalPercentUsed .Precision }}% \uf85a ",
					"properties": {
						"precision": 2
					},
					"style": "diamond"
				}
			]
		}
	]
}
